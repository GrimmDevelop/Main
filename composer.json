{
    "repositories": [
        {
            "url": "https://github.com/GrimmDevelop/LocationParser.git",
            "type": "vcs"
        },
        {
            "url": "https://github.com/GrimmDevelop/LetterParser.git",
            "type": "vcs"
        }
    ],
	"name": "grimm/letters",
	"description": "Grimmbrief managment and providing software.",
	"keywords": ["Grimm", "Briefe", "Managment"],
	"license": "MIT",
	"require": {
		"laravel/framework": "4.1.*",
		"cartalyst/sentry": "2.1.*",
		"pda/pheanstalk": "*",
        "hisamu/php-xbase": "*@dev",
        "grimmtools/locationparser": "*@dev",
        "grimmtools/letterparser": "*@dev",
        "barryvdh/laravel-ide-helper": "1.*"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		],
		"psr-4": {
			"Grimm\\": "app/Grimm"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
            "php artisan ide-helper:generate",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "stable"
}
